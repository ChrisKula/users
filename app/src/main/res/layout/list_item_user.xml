<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="8dp">


    <ImageView
        android:id="@+id/iv_user_default_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/tv_list_item_user_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_list_item_user_first_name"
        app:srcCompat="@drawable/ic_person_color_primary_24dp" />

    <TextView
        android:id="@+id/tv_list_item_user_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_user_default_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="John" />

    <TextView
        android:id="@+id/tv_list_item_user_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintLeft_toRightOf="@id/tv_list_item_user_first_name"
        app:layout_constraintTop_toTopOf="@id/tv_list_item_user_first_name"
        tools:text="Doe" />

    <TextView
        android:id="@+id/tv_list_item_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_list_item_user_first_name"
        app:layout_constraintTop_toBottomOf="@id/tv_list_item_user_first_name"
        tools:text="john.doe@mail.com" />


</android.support.constraint.ConstraintLayout>